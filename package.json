{
  "workspaces": [
    "frontend/**"
  ],
  "scripts": {
    "web:dev": "bun run --cwd ./frontend/web dev",
    "web:build": "bun run --cwd ./frontend/web build",
    "web:lint": "bun run --cwd ./frontend/web lint",
    "web:preview": "bun run --cwd ./frontend/web preview",
    "contract:deploy": "source .env && VITE_CHAIN_ID=$VITE_CHAIN_ID bun contract:dev && DEPLOYER_PRIVATE_KEY=$DEPLOYER_PRIVATE_KEY bun run --cwd ./contracts sforge script script/PumpRand.s.sol --rpc-url $RPC_URL --broadcast && VITE_CHAIN_ID=$VITE_CHAIN_ID bun contract:address",
    "contract:dev": "bun contract:build && bun contract:abi",
    "contract:build": "bun run --cwd ./contracts sforge build",
    "contract:abi": "jq '{methodIdentifiers: .methodIdentifiers, abi: .abi}' ./contracts/out/PumpRand.sol/PumpRand.json > ./frontend/web/public/chains/$VITE_CHAIN_ID.json",
    "contract:address": "jq -s '{\"contractAddress\": .[0].receipts[0].contractAddress} * .[1]' ./contracts/broadcast/PumpRand.s.sol/$VITE_CHAIN_ID/run-latest.json ./frontend/web/public/chains/$VITE_CHAIN_ID.json > temp.json && mv temp.json ./frontend/web/public/chains/$VITE_CHAIN_ID.json"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "seismic-viem": "1.0.13"
  }
}
