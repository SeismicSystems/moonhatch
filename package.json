{
  "workspaces": [
    "frontend/**"
  ],
  "scripts": {
    "web:dev": "bun run --cwd ./frontend/web dev",
    "web:build": "bun run --cwd ./frontend/web build",
    "web:lint": "bun run --cwd ./frontend/web lint",
    "web:preview": "bun run --cwd ./frontend/web preview",
    "contract:clean": "bun run --cwd ./contracts rimraf broadcast/ cache/ out/",
    "contract:deploy": "source .env && VITE_CHAIN_ID=$VITE_CHAIN_ID bun contract:dev && DEPLOYER_PRIVATE_KEY=$DEPLOYER_PRIVATE_KEY bun run --cwd ./contracts sforge script script/PumpRand.s.sol --rpc-url $RPC_URL --broadcast && VITE_CHAIN_ID=$VITE_CHAIN_ID bun contract:addresses",
    "contract:dev": "bun contract:build && bun contract:abis",
    "contract:build": "bun run --cwd ./contracts sforge build",
    "contract:abis": "CONTRACT=PumpRand bun contract:abi",
    "contract:abi": "mkdir -p ./frontend/web/public/chains/$VITE_CHAIN_ID && jq '{methodIdentifiers: .methodIdentifiers, abi: .abi}' ./contracts/out/$CONTRACT.sol/$CONTRACT.json > ./frontend/web/public/chains/$VITE_CHAIN_ID/$CONTRACT.json",
    "contract:addresses": "CONTRACT=PumpRand bun contract:address",
    "contract:address": "jq -s '{\"address\": .[0].receipts[0].contractAddress} * .[1]' ./contracts/broadcast/$CONTRACT.s.sol/$VITE_CHAIN_ID/run-latest.json ./frontend/web/public/chains/$VITE_CHAIN_ID/$CONTRACT.json > temp.json && mv temp.json ./frontend/web/public/chains/$VITE_CHAIN_ID/$CONTRACT.json"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.4",
    "@mui/material": "^6.4.3",
    "framer-motion": "^12.4.2",
    "seismic-viem": "1.0.13"
  }
}
